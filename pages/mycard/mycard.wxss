/* pages/mycard/mycard.wxss */

.title_box {
  margin-top: 3rem;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.icon_box{
  font-size: 158rpx;
  color:#ccc;
  margin-bottom: 20rpx;
}

.title_box>text{
  color: #989898;
}
/* 有名片 */

.hasCard {
  margin: 0.5rem;
  box-shadow: 0px 5px 5px #ccc;
  border-radius: 0.3rem;
}

.cover_Bc {
  position: relative;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  width: 100%;
  height: 10rem;
  filter: blur(5px);
}

.message_box {
  color: white;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
  padding: 1rem 0.5rem;
}

.name_box {
  padding-left: 1rem;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  font-size: 36rpx;
}

.message_top_box {
  display: flex;
  align-items: center;
}

.message_top_box image {
  width: 3rem;
  height: 3rem;
  border-radius: 50%;
}

.messageInfo_box {
  padding-top: 0.3rem;
}

.messageInfo_box text:first-child {
  padding-right: 1rem;
}

.ordermenu {
  background: white;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 0.5rem;
}

.ordermenu text {
  margin-top: 0.2rem;
  font-size: 32rpx;
}

.order-list {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: black;
}
.btn_box{
  width:90%;
  border:1px solid black;
  margin-top:0.5rem;
  font-size: 36rpx;
}
